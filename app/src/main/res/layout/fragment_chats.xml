<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChatsFragment">


    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/chats_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/gray_color_dark"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">

        <RelativeLayout
            android:layout_marginTop="60dp"
            android:id="@+id/search_layout"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:inputType="text"
                android:hint="Search for a driver"
                android:padding="10dp"

                style="@style/body_regular_12"
                android:textColor="@color/gray_color_dark"
                android:textColorHint="@color/gray_color_dark"
                android:id="@+id/chats_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/search_field"/>


            <ImageView
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/search"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/field_border"
            android:layout_marginTop="20dp"
            android:id="@+id/first_chats_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">



            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/profileAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/profileAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/firstChatName"
                    android:text="Name Surname"
                    android:fontFamily="@font/roboto_medium_500"
                    android:textSize="16sp"
                    android:lineHeight="16sp"
                    android:textColor="@color/text_color_light" />

                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/firstChatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/roboto_regular_400"
                        android:textSize="12sp"
                        android:lineHeight="16sp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanks for your service"
                        android:textColor="@color/text_color_light"/>


                </LinearLayout>

            </RelativeLayout>


            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/totific_first"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@null"/>



        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/field_border"
            android:layout_marginTop="20dp"
            android:id="@+id/second_chat_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/first_chats_layout"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">



            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/chatsAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <RelativeLayout
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                app:layout_constraintLeft_toRightOf="@+id/chatsAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@android:color/transparent"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/secondChatName"
                    android:text="Name Surname"
                    android:fontFamily="@font/roboto_medium_500"
                    android:textSize="16sp"
                    android:lineHeight="16sp"
                    android:textColor="@color/text_color_light" />

                <LinearLayout
                    android:background="@android:color/transparent"
                    android:layout_below="@+id/secondChatName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/roboto_regular_400"
                        android:textSize="12sp"
                        android:lineHeight="16sp"
                        android:background="@android:color/transparent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thanks for your service"
                        android:textColor="@color/text_color_light"/>


                </LinearLayout>

            </RelativeLayout>


            <ImageView
                android:background="@android:color/transparent"
                android:id="@+id/notific_second"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/count_p"
                android:padding="5dp"
                android:scaleType="centerCrop"/>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>